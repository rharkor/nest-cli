import { Controller, Get, Post, Put, Delete, Body, Param } from '@nestjs/common';
import { <%= entityClassName %>Service } from './<%= fileNameCut %>.service';
import { Create<%= entityClassName %>Dto } from './dtos/<%= fileNameCut %>-create.dto';
import { Update<%= entityClassName %>Dto } from './dtos/<%= fileNameCut %>-update.dto';

@Controller('<%= fileNameCut.toLowerCase() %>')
export class <%= entityClassName %>Controller {
  constructor(private readonly <%= entityName %>Service: <%= entityClassName %>Service) {}

  @Get()
  findAll() {
    return this.<%= entityName %>Service.findAll();
  }

  @Get(':id')
  findOne(@Param('id') id: number) {
    return this.<%= entityName %>Service.findOne(id);
  }

  @Post()
  create(@Body() create<%= entityClassName %>Dto: Create<%= entityClassName %>Dto) {
    return this.<%= entityName %>Service.create(create<%= entityClassName %>Dto);
  }

  @Put(':id')
  update(@Param('id') id: number, @Body() update<%= entityClassName %>Dto: Update<%= entityClassName %>Dto) {
    return this.<%= entityName %>Service.update(id, update<%= entityClassName %>Dto);
  }

  @Delete(':id')
  remove(@Param('id') id: string) {
    return this.<%= entityName %>Service.remove(id);
  }
}
